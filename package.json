  },
  "devDependencies": {
    "@types/uuid": "3.4.7",
    "@types/chai": "4.2.10",
    "@types/mocha": "7.0.2",
    "@types/sinon": "7.5.2",
    "@types/bunyan": "1.8.6",
    "@types/helmet": "0.0.45",

    "@types/chai-as-promised": "7.1.2",
    "nyc": "15.0.0",
    "chai": "4.2.0",
    "mocha": "7.1.0",
    "sinon": "9.0.1",
    "tslint": "6.1.0",
    "ts-node": "8.6.2",
    "nodemon": "2.0.2",
    "typescript": "3.7.5",
    "sinon-chai": "3.5.0",
